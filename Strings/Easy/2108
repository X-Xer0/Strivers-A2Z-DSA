class Solution {
public:
    bool isPalindrome(const string &s) {
        int i = 0, j = s.size() - 1;
        while (i < j) {
            if (s[i++] != s[j--]) return false;
        }
        return true;
    }
    
    string firstPalindrome(vector<string>& words) {
        for (auto &word : words) {
            if (isPalindrome(word)) return word;
        }
        return "";
    }
};